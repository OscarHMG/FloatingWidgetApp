<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:id="@+id/directions"
        android:layout_below="@+id/toolbar"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/colorWhiteSmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:background="@drawable/shadow"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Origin"
                    android:textAppearance="@style/TextViewLabel"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content" />

                <EditText
                    style="@style/EditText.DemoWaze"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Destination"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:textAppearance="@style/TextViewLabel"
                    android:layout_height="wrap_content" />

                <EditText
                    style="@style/EditText.DemoWaze"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="No directions enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>





    <LinearLayout
        android:id="@+id/wazeButton"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_height="90dp">

        <Button
            android:id="@+id/btnStartWaze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16px"
            android:text="Start waze"
            android:textStyle=""
            style="@style/ButtonDemoWaze"
            />

    </LinearLayout>











</RelativeLayout>